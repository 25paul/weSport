/* miniprogram/pages/sport/sport.wxss */



.main_list {
  width: 100%;
  height: 140rpx;
  padding: 18rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
}

.list_item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list_item image {
  width: 60rpx;
  height: 60rpx;
}

.list_item .tip {
  font-size: 24rpx;
  color: #999;
}