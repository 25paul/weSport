/* miniprogram/pages/mine/mine.wxss */
.authorization_popup {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
.popup_container {
  width: 80%;
  height: 580rpx;
  background-color: #f6f6f6;
  border-radius: 4px;
}
.popup_img {
  width: 300rpx;
  height: 240rpx;
  position: relative;
  left: 50%;
  transform: translatex(-50%);
}
.popup_text {
  text-align: center;
  margin-bottom: 30rpx;
}
.text_colume_wel {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.text_colume_tip {
  font-size: 36rpx;
}
.cell {
  background-color: #fff;
  color: #353535;
  font-size: 30rpx;
  padding: 35rpx 0;
}

.user-info {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  color: #353535;
  font-size: 30rpx;
  padding: 25rpx;
}

.user-info image {
  width: 110rpx;
  height: 110rpx;
  display: inline-block;
}

.user-info .info-wrap {
  margin-left: 15rpx;
}

.user-info .user-code {
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.second-contain {
  padding-left: 25rpx;
  margin-top: 30rpx;
  background-color: #fff;
}

.second-contain .cell {
  padding-left: 10rpx;
}

.second-contain .border-top {
  border-top: 1rpx solid #d9d9d9;
}

.cell.msg .point {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -5rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background-color: #36b9af;
}

.help {
  margin-top: 30rpx;
  padding-left: 35rpx;
}
