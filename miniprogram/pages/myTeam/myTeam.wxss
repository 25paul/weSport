/* miniprogram/pages/myTeam/myTeam.wxss */

.team_container {
  padding: 20rpx;
}
.button {
  height: 72rpx;
  width: 24%;
  line-height: 72rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  border: 1px solid #888;
}

.team_add  button {
  margin-top: 100rpx;
  color: #666;
  border: 1px solid #888;
  border-radius: 10rpx
}
.team_item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.team_item input, .team_item text {
  width: 70%;
  height: 68rpx;
}
.team_palyer {
  justify-content: space-around;
}
.player_count {
  width: 100%;
  height:72rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.player_count .box {
  width: 70%;
  display: flex;
  justify-content: space-around;
}
.player_count image {
  width: 58rpx;
  height: 58rpx;
}
.add_button, .reduce_button {
  width: 100rpx;
  height: 72rpx;
}
.nowork {
  pointer-events: none;
}
.margin_left {
  margin-left: 20rpx;
}