/* miniprogram/pages/myPublic/myPublic.wxss */
.public_container {
  padding: 30rpx 10rpx 0 10rpx;
  box-sizing: border-box;
}
.select_wrap {
  width: 60%;
  margin-bottom: 100rpx;
}
.select_time {
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #aaa;
  border-radius: 10rpx;
}
.public_select {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.select_current {
  width: 100%;
  height: 70rpx;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  line-height: 70rpx;
}
.select_option {
  height: 200rpx;
  width: 100%;
  overflow: auto;
}
.select_option .option {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}
.public_button {
  width: 60%;
  height: 120rpx;
  text-align: center;
  background-color: #aaa;
  border-radius: 10rpx;
  line-height: 120rpx;
}