  .together_container {
    width: 100%;
    height: 100%;
    padding: 25rpx;
    box-sizing: border-box;
  }
  .together_header {
    width: 100%;
    height: 125rpx;
    line-height: 125rpx;
    margin-bottom: 25rpx;
  }
  .together_item {
    width: 100%;
    height: 175rpx;
    border-radius: 10rpx;
    border: 1px solid #aaa;
    background-color: #ffffff;
    padding: 10rpx; 
    box-sizing: border-box;
  }
  .item_team {
    height: 90rpx;
    display: flex;
    justify-content: space-around;
  }
  .home_team {
    width: 40%;
  }
  .icon_team {
    width: 12%;
  }
  .guest_team {
    width: 40%;
  }
  .item_team .topitem {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .item_message {
    height: 60rpx;
    font-size: 30rpx;
    color: #888;
    display: flex;
    justify-content: space-around;
  }
  .bottomitem {
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }